---
import Base from "@/layouts/Base.astro";
import CallToAction from "@/partials/CallToAction.astro";
import FeaturesSection from "@/partials/FeatureSection.astro";
import FeaturesGrid from "@/partials/FeaturesGrid.astro";
import { getEntry } from "astro:content";

const feature = await getEntry("services", "-projektmanagement");
const { title, description, meta_title, image, hero } = feature.data;
---

<Base
  title={title}
  meta_title={meta_title}
  description={description}
  image={image}>

  <FeaturesGrid content={hero} file="-projektmanagement-features" largeHeading={false} smallLayout={true} />

  <CallToAction />
</Base>
